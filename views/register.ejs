<%- include("partials/header") %>

<style>
    .auth-page {
        min-height: calc(100vh - 60px);
        background: url("/images/background.jpg") center/cover no-repeat fixed;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 16px;
    }
    .auth-wrapper {
        width: 100%;
        display: flex;
        justify-content: center;
    }
    .auth-card {
        width: 70%;
        max-width: 640px;
        background: rgba(255, 255, 255, 0.86);
        border-radius: 20px;
        padding: 32px 36px 26px;
        box-shadow: 0 18px 38px rgba(0, 0, 0, 0.16);
        backdrop-filter: blur(5px);
    }
    .auth-icon {
        width: 88px;
        height: 88px;
        border-radius: 26px;
        margin: 0 auto 22px;
        background: url("/images/xioahui.jpg") center/cover no-repeat, #e9ecef;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #717171;
        font-weight: 600;
        font-size: 13px;
    }
    .auth-title {
        text-align: center;
        margin-bottom: 22px;
        font-size: 24px;
        font-weight: 600;
        color: #333;
    }
    .auth-card .form-control {
        height: 46px;
        border-radius: 10px;
        box-shadow: none;
        border: 1px solid #dcdfe5;
    }
    .auth-card .form-control:focus {
        border-color: #9fb7ff;
        box-shadow: 0 0 0 3px rgba(80, 123, 255, 0.18);
    }
    .auth-submit {
        width: 100%;
        height: 46px;
        border-radius: 12px;
        border: none;
        background: linear-gradient(90deg, #5b7bff, #7ea9ff);
        color: #fff;
        font-weight: 600;
        margin-top: 10px;
        transition: transform 0.1s ease, box-shadow 0.2s ease;
    }
    .auth-submit:hover {
        box-shadow: 0 10px 24px rgba(91, 123, 255, 0.3);
        transform: translateY(-1px);
    }
    .auth-switch {
        margin-top: 14px;
        color: #777;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    .auth-switch .btn-default {
        border-color: #ccc;
        color: #555;
        padding: 6px 12px;
        border-radius: 10px;
    }
</style>

<div class="auth-page">
    <div class="auth-wrapper">
        <div class="auth-card">
            <div class="auth-icon"></div>
            <div class="auth-title"><%= t('registerTitle') %></div>
            <form action="/register" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="username" placeholder="<%= t('loginUsername') %>" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="<%= t('loginPassword') %>" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="adminCode" placeholder="<%= t('registerAdminHint') %>">
                </div>
                <div class="auth-switch">
                    <span><%= t('registerLoginHint') %></span>
                    <a href="/login?lang=<%= lang %>" class="btn btn-sm btn-default"><%= t('registerLoginButton') %></a>
                </div>
                <button type="submit" class="auth-submit"><%= t('registerSubmit') %></button>
            </form>
        </div>
    </div>
</div>

<%- include("partials/footer") %>
