<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <header>
            <% if (parentComment) { %>
                <h1 style="text-align: center;"><%= t('replyToUser') %> <%= parentComment.author.username %></h1>
            <% } else { %>
                <h1 style="text-align: center;"><%= t('newReviewFor') %> <%= campground.name %> <%= t('newReviewSuffix') %></h1>
            <% } %>
        </header>    

        <form action="/campgrounds/<%=campground.id%>/comments?lang=<%= lang %>" method="POST" enctype="multipart/form-data" style="width: 30%; margin:25px auto;">

            <div class="form-group">
                <input class="form-control" type="text" placeholder="<%= t('reviewPlaceholder') %>" name="comment[text]" required>
            </div>
            <div class="form-group">
                <label for="image_files">图片（可选，最多 9 张）</label>
                <input id="image_files" class="form-control" type="file" name="image_files" accept="image/*" multiple>
                <small class="text-muted">一次可选择多张，最多可以上传 9 张图片。</small>
            </div>

            <% if (parentComment) { %>
                <!-- 回复时带上父评论 ID -->
                <input type="hidden" name="comment[parentId]" value="<%= parentComment.id %>">
            <% } %>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block"><%= t('reviewSubmit') %></button>
            </div>

            <a href="/campgrounds/<%=campground.id%>?lang=<%= lang %>"><%= t('backToCanteen') %></a>
        </form>

        
    </div>
</div>

<%- include("../partials/footer") %>
