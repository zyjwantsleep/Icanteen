<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <header>
            <h1 style="text-align: center;"><%= t('commentEdit') %></h1>
        </header>    

        <form action="/campgrounds/<%=campground_id%>/comments/<%=comment.id%>?_method=PUT&lang=<%= lang %>" method="POST" style="width: 30%; margin:25px auto;">

            <div class="form-group">
                <input class="form-control" type="text" value="<%=comment.text%>" name="comment[text]" placeholder="<%= t('reviewPlaceholder') %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block"><%= t('reviewSubmit') %></button>
            </div>
        </form>
        
    </div>
</div>

<%- include("../partials/footer") %>
