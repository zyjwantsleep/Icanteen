<%- include("../partials/header") %>

<h1><%= t('adminUserListTitle') %></h1>

<form class="form-inline" method="GET" action="/admin/users" style="margin-bottom:15px;">
    <div class="form-group">
        <input type="text"
               class="form-control"
               name="q"
               value="<%= query %>"
               placeholder="<%= t('adminUserSearchPlaceholder') %>">
    </div>
    <button type="submit" class="btn btn-primary"><%= t('adminUserSearchButton') %></button>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th><%= t('adminUserUsername') %></th>
            <th><%= t('adminUserRole') %></th>
            <th><%= t('adminUserActions') %></th>
        </tr>
    </thead>
    <tbody>
        <% if (users && users.length > 0) { %>
            <% users.forEach(function(u, index) { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= u.username %></td>
                    <td><%= u.role === 'admin' ? t('adminUserRoleAdmin') : t('adminUserRoleUser') %></td>
                    <td>
                        <% if (u.id !== (user && user.id)) { %>
                            <form method="POST"
                                  action="/admin/users/<%= u.id %>/delete"
                                  style="display:inline-block;"
                                  onsubmit="return confirm('<%= t('adminUserDeleteConfirm') %>');">
                                <button type="submit" class="btn btn-xs btn-danger">
                                    <%= t('adminUserDeleteButton') %>
                                </button>
                            </form>
                        <% } else { %>
                            <span class="text-muted"><%= t('adminUserSelfLabel') %></span>
                        <% } %>
                    </td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="4"><%= t('adminUserEmpty') %></td>
            </tr>
        <% } %>
    </tbody>
</table>

<%- include("../partials/footer") %>

