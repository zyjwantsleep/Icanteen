<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <header>
            <h1 style="text-align: center;">发布一条食堂评价</h1>
        </header>    

        <!-- 选择一个现有食堂（D5/F3/B1），发布一条评价，可上传本地图片 -->
        <form action="/campgrounds/publish" method="POST" enctype="multipart/form-data" style="width: 30%; margin:25px auto;">
            <div class="form-group">
                <label for="zone">选择食堂</label>
                <select id="zone" class="form-control" name="zone" required>
                    <option value="">请选择一个食堂</option>
                    <option value="D5">D5</option>
                    <option value="F3">F5</option>
                    <option value="B1">B1</option>
                </select>
            </div>
            <div class="form-group">
                <label for="commentText">评价内容</label>
                <textarea id="commentText" class="form-control" rows="4" placeholder="请填写对该食堂的评价" name="text" required></textarea>
            </div>
            <div class="form-group">
                <label for="image_files">图片（可选，最多 9 张）</label>
                <input id="image_files" type="file" class="form-control" name="image_files" accept="image/*" multiple>
                <small class="text-muted">支持多选图片，一次最多上传 9 张。</small>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">发布</button>
            </div>

            <a href="/campgrounds?lang=<%= lang %>"><%= t('backToList') %></a>
        </form>

        
    </div>
</div>

<%- include("../partials/footer") %>
